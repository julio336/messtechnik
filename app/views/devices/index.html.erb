<div class="container">
    <h1>Listado de dispositivos</h1>

    <table class="table table-striped">
      <tr>
        <th>Inventario</th>
        <th>Descripción</th>
        <th>Marca</th>
        <th>Modelo</th>
        <th>Última calibración</th>
        <th>Próxima calibración</th>
        <th>Deflection</th>
        <th>Responsible</th>
        <th>User</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>

    <% @devices.each do |device| %>
      <tr>
        <td><%= device.folio %></td>
        <td><%= device.description %></td>
        <td><%= device.brand %></td>
        <td><%= device.model %></td>
        <td><%= device.calibration_date %></td>
        <td><%= device.next_calibration %></td>
        <td><%= device.deflection %></td>
        <td><%= device.responsible %></td>
        <td><%= device.user_id %></td>
        <td><%= link_to 'Show', device %></td>
        <td><%= link_to 'Edit', edit_device_path(device) %></td>
        <td><%= link_to 'Destroy', device, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    </table>

    <br />

    <%= link_to 'Nuevo dispositvo', new_device_path, class: "btn btn-primary btn-lg" %>
 </div>
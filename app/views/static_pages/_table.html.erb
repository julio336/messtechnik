<h1>Listado de dispositivos</h1>

    <table class="table table-striped">
      <tr>
        <th>Inventario</th>
        <th>Descripción</th>
        <th>Marca</th>
        <th>Modelo</th>
        <th>Última calibración</th>
        <th>Próxima calibración</th>
        <th>Observaciones</th>
        <th>Responsable</th>
        <th>Status</th>
     <% if current_user.id == 1 %>   
        <th>User</th>
     <% end %>
        <th></th>
        <th></th>
        <th></th>
      </tr>

    <% @devices.each do |device| %>
        <% case device.status %>
            <% when "NOK" %>
              <tr class="danger">
                <td><%= device.folio %></td>
                <td><%= device.description %></td>
                <td><%= device.brand %></td>
                <td><%= device.model %></td>
                <td><%= device.calibration_date %></td>
                <td><%= device.next_calibration %></td>
                <td><%= device.deflection %></td>
                <td><%= device.responsible %></td>
                <td><%= device.status %></td>
            <% if current_user.id == 1 %>   
                <td><%= device.user_id %></td>
            <% end %>
                <td><%= link_to 'Ver detalles', device %></td>
                <td><%= link_to 'Editar', edit_device_path(device) %></td>
                <td><%= link_to 'Borrar', device, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% when "Hasta su uso" %>
                <tr class="info">
                    <td><%= device.folio %></td>
                    <td><%= device.description %></td>
                    <td><%= device.brand %></td>
                    <td><%= device.model %></td>
                    <td><%= device.calibration_date %></td>
                    <td><%= device.next_calibration %></td>
                    <td><%= device.deflection %></td>
                    <td><%= device.responsible %></td>
                    <td><%= device.status %></td>
                <% if current_user.id == 1 %>   
                    <td><%= device.user_id %></td>
                <% end %>
                    <td><%= link_to 'Ver detalles', device %></td>
                    <td><%= link_to 'Editar', edit_device_path(device) %></td>
                    <td><%= link_to 'Borrar', device, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                  </tr>
            <% else %>
                <tr>
                    <td><%= device.folio %></td>
                    <td><%= device.description %></td>
                    <td><%= device.brand %></td>
                    <td><%= device.model %></td>
                    <td><%= device.calibration_date %></td>
                    <td><%= device.next_calibration %></td>
                    <td><%= device.deflection %></td>
                    <td><%= device.responsible %></td>
                    <td><%= device.status %></td>
                <% if current_user.id == 1 %>   
                    <td><%= device.user_id %></td>
                <% end %>
                    <td><%= link_to 'Ver detalles', device %></td>
                    <td><%= link_to 'Editar', edit_device_path(device) %></td>
                    <td><%= link_to 'Borrar', device, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                  </tr>
        <% end %>
    <% end %>
    </table>

    <br />
    <div class="col-md-3">
        <%= link_to 'Ver inventario', devices_path, class: "btn btn-primary btn-lg" %>
    </div>
    <div class="col-md-3">
        <%= link_to 'Nuevo dispositvo', new_device_path, class: "btn btn-primary btn-lg" %>
    </div>